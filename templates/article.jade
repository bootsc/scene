
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    | #{ "Photographed by " }
    mixin author(page.metadata.photographer)
    | #{ " | Written by " }
    mixin author(page.metadata.author)

block cover
 img(src=page.metadata.cover).cover

block content
  div.content-wrap
    article.article
      section.content!= typogr(page.html).typogrify()

